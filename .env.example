# SaaS Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database (PostgreSQL for production, SQLite for development)
# Production: postgresql://user:password@localhost:5432/invoice_reconciliation
# Development: sqlite:///./invoice_reconciliation.db
DATABASE_URL=sqlite:///./invoice_reconciliation.db
DATABASE_ECHO=False
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for Celery - optional for development)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION-to-random-string
JWT_SECRET_KEY=jwt-secret-key-CHANGE-IN-PRODUCTION-to-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS (adjust for your frontend)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Storage
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
TEMP_DIR=./temp
MAX_UPLOAD_SIZE_MB=50

# Processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=300

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Features
ENABLE_OCR=False
ENABLE_ML_EXTRACTION=False
ENABLE_WEBHOOKS=False

# Subscription Limits
FREE_TIER_JOBS_PER_MONTH=100
PRO_TIER_JOBS_PER_MONTH=1000
